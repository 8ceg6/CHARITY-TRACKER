<h1>DONATION SUBMISSION</h1>

<%= form_for @donation do |f| %>
<%= f.label "Donation Amount: $" %>
<%= f.number_field :amount %><br>

<p> Select a Charity</p>
<%= collection_select(:charity, :name, Charity.all, :name, :name) %><br><br> 

<%= f.fields_for :charity  do |char_fld| %>
    <%= char_fld.label "Charity Name"%>
    <%= char_fld.text_field :name %><br>
    <%= char_fld.label "Email"%>
    <%= char_fld.text_field :email %><br>
    <% end %>
<%= f.submit "Submit Donation"%>
 <% end %>   